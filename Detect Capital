class Solution {
public:
    bool detectCapitalUse(string word) {
        int capital=0,lower=0;
        for(int i=1; i<word.size();i++)
        {
            if(word[i]>64 && word[i]<91)
                capital++;
            else
                lower++;
        }
        if(!(word[0]>64 && word[0]<91) && (lower!=(word.size()-1)))
            return false;
        if(capital==(word.size()-1) || lower==(word.size()-1))
            return true;
        else
            return false;
    }
};